# Code Quality Automation Suite Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="Code Quality Automation Suite"
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=localhost
PORT=8000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=database_name
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration (if using)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRE=24h

# API Keys (replace with your actual keys)
# Add any third-party API keys your application needs

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Email Configuration (if applicable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cloud Storage (if applicable)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-bucket-name

# Additional service URLs
# Add any external service URLs or API endpoints
